---
import Base from "../../layouts/Base.astro";

export async function getStaticPaths() {
  const allPosts = await Astro.glob("../article/*.mdx");

  const uniqueTags = [
    ...new Set(allPosts.map((post) => post.frontmatter.tags).flat()),
  ];

  return uniqueTags.map((tag) => {
    const filteredPosts = allPosts.filter((post) =>
      post.frontmatter.tags.includes(tag)
    ).sort((a, b) => Date.parse(b.frontmatter.date) - Date.parse(a.frontmatter.date));
    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---

<Base pageTitle={"Tag: " + tag}>
  <a class="bg-blue-800 rounded-lg py-1 px-2 hover:underline" href={`/tags/${tag}`} data-astro-prefetch>#{tag}</a>
  <p class="text-gray-300 font-medium py-4">{posts.length} {posts.length > 1 ? "results" : "result"}</p>
  <>
    {
      posts.map((post) => (
        <><h1>{post.url}</h1><h2>{post.frontmatter.title}</h2></>
      ))
    }
  </ul>
</Base>
