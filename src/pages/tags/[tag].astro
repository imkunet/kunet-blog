---
import ArticleLink from "../../components/ArticleLink.astro";
import Base from "../../layouts/Base.astro";

export async function getStaticPaths() {
  const allPosts = await Astro.glob("../article/*.mdx");

  const uniqueTags = [
    ...new Set(allPosts.map((post) => post.frontmatter.tags).flat()),
  ];

  return uniqueTags.map((tag) => {
    const filteredPosts = allPosts.filter((post) =>
      post.frontmatter.tags.includes(tag)
    ).sort((a, b) => Date.parse(b.frontmatter.date) - Date.parse(a.frontmatter.date));
    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---

<Base pageTitle={"Tag: " + tag}>
  <div class="text-2xl">
    <span class="font-semibold">Articles tagged </span>
    <span class="bg-blue-800 rounded-lg py-1 px-2 hover:underline cursor-pointer">#{tag}</span>
  </div>
  <p class="text-gray-300 font-medium py-2">{posts.length} {posts.length > 1 ? "results" : "result"}</p>
  <div class="flex flex-col gap-4 py-4">
    {posts.map((post) => <ArticleLink article={post} />)}
  </div>
</Base>
