---
import Base from "../../layouts/Base.astro";
const articles = await Astro.glob("../../articles/*/*.mdx");
const tags = [...new Set(articles.filter((post) => !post.frontmatter.underConstruction).map((post) => post.frontmatter.tags).flat())].sort();
---

<Base pageTitle={"All Tags"}>
  <h1 class="py-6 font-semibold text-2xl">All Tags</h1>
  <div class="flex flex-col gap-2">
    {
      tags.map((tag) => (
        <a class="bg-blue-800 rounded-lg py-1 px-2 hover:underline" href={`/tags/${tag}`} data-astro-prefetch>#{tag}</a>
      ))
    }
  </div>
</Base>
